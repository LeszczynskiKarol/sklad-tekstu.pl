---
const navItems = [
  { label: 'Proces', href: '/#proces', section: '§2' },
  { label: 'Realizacje', href: '/#realizacje', section: '§3' },
  { label: 'Dlaczego LaTeX', href: '/#dlaczego-latex', section: '§4' },
  { label: 'Blog', href: '/blog', section: '§5' },
  { label: 'Kontakt', href: '/kontakt', section: '§6' },
];

const serviceItems = [
  { chapter: '§1.1', label: 'Podręczniki i skrypty', href: '/uslugi/podreczniki-skrypty/' },
  { chapter: '§1.2', label: 'Prace naukowe', href: '/uslugi/prace-naukowe/' },
  { chapter: '§1.3', label: 'Ćwiczenia i arkusze', href: '/uslugi/cwiczenia-arkusze/' },
  { chapter: '§1.4', label: 'Raporty i dokumentacja', href: '/uslugi/raporty-dokumentacja/' },
  { chapter: '§1.5', label: 'Katalogi i broszury', href: '/uslugi/katalogi-broszury/' },
  { chapter: '§1.6', label: 'Instrukcje i procedury', href: '/uslugi/instrukcje-procedury/' },
  { chapter: '§1.7', label: 'Prezentacje i postery', href: '/uslugi/prezentacje-postery/' },
  { chapter: '§1.8', label: 'Ebooki', href: '/uslugi/ebooki/' },
];
---

<header class="header" id="header" role="banner">
  <div class="header__inner">
    <a href="/" class="header__logo" aria-label="sklad-tekstu.pl — strona główna">
      <span class="header__logo-text">sklad-tekstu</span><span class="header__logo-dot">.pl</span>
    </a>

    <nav class="header__nav" aria-label="Nawigacja główna">
      <!-- Usługi dropdown -->
      <div class="header__dropdown" id="services-dropdown">
        <button class="header__link header__dropdown-trigger" aria-expanded="false" aria-haspopup="true">
          <span class="header__link-section">§1</span>
          Usługi
          <svg class="header__dropdown-chevron" width="10" height="10" viewBox="0 0 10 10" aria-hidden="true">
            <polyline points="2,3.5 5,6.5 8,3.5" fill="none" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="header__dropdown-panel" aria-label="Lista usług">
          {serviceItems.map((item) => (
            <a href={item.href} class="header__dropdown-link">
              <span class="header__dropdown-chapter">{item.chapter}</span>
              {item.label}
            </a>
          ))}
          <div class="header__dropdown-footer">
            <a href="/#uslugi" class="header__dropdown-all">Wszystkie usługi →</a>
          </div>
        </div>
      </div>

      {navItems.map((item) => (
        <a href={item.href} class="header__link">
          <span class="header__link-section">{item.section}</span>
          {item.label}
        </a>
      ))}
    </nav>

    <a href="/kontakt" class="header__cta">
      Wycena
      <span class="header__cta-arrow">→</span>
    </a>

    <button
      class="header__burger"
      id="burger"
      aria-label="Otwórz menu"
      aria-expanded="false"
    >
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile menu -->
  <div class="header__mobile" id="mobile-menu" aria-hidden="true">
    <nav class="header__mobile-nav">
      <!-- Mobile: Usługi as expandable section -->
      <div class="header__mobile-group">
        <button class="header__mobile-link header__mobile-group-trigger" id="mobile-services-trigger" aria-expanded="false">
          <span class="header__mobile-section">§1</span>
          Usługi
          <svg class="header__mobile-chevron" width="14" height="14" viewBox="0 0 10 10" aria-hidden="true">
            <polyline points="2,3.5 5,6.5 8,3.5" fill="none" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="header__mobile-submenu" id="mobile-services-submenu" aria-hidden="true">
          {serviceItems.map((item) => (
            <a href={item.href} class="header__mobile-sublink">
              <span class="header__mobile-subchapter">{item.chapter}</span>
              {item.label}
            </a>
          ))}
        </div>
      </div>

      {navItems.map((item) => (
        <a href={item.href} class="header__mobile-link">
          <span class="header__mobile-section">{item.section}</span>
          {item.label}
        </a>
      ))}
      <a href="/#kontakt" class="header__mobile-cta">Bezpłatna wycena →</a>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: var(--paper);
    border-bottom: 0.5px solid var(--rule);
    transition: all 0.4s ease;
  }

  .header.scrolled {
    background: rgba(250, 248, 244, 0.92);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 1px 8px rgba(0,0,0,0.04);
  }

  .header__inner {
    max-width: var(--page-wide);
    margin: 0 auto;
    padding: 0.85rem var(--gutter);
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-6);
  }

  .header__logo {
    font-family: var(--font-mono);
    font-size: var(--fs-sm);
    font-weight: var(--fw-regular);
    letter-spacing: 0.06em;
    color: var(--ink-muted);
    text-decoration: none;
    text-transform: uppercase;
    white-space: nowrap;
    transition: color var(--transition-fast);
  }

  .header__logo:hover { color: var(--ink); }
  .header__logo-dot { color: var(--accent); }

  .header__nav {
    display: none;
    gap: var(--space-8);
    align-items: baseline;
  }

  @media (min-width: 900px) {
    .header__nav { display: flex; }
  }

  .header__link {
    font-family: var(--font-serif);
    font-size: var(--fs-sm);
    color: var(--ink-muted);
    text-decoration: none;
    position: relative;
    transition: color var(--transition-base);
    white-space: nowrap;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    line-height: inherit;
  }

  .header__link::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent);
    transition: width var(--transition-base);
  }

  .header__link:hover { color: var(--ink); }
  .header__link:hover::after { width: 100%; }

  .header__link-section {
    font-family: var(--font-mono);
    font-size: var(--fs-xs);
    color: var(--ink-faint);
    margin-right: 0.25rem;
  }

  /* ═════ DROPDOWN ═════ */
  .header__dropdown {
    position: relative;
  }

  .header__dropdown-trigger {
    display: inline-flex;
    align-items: baseline;
    gap: 0.3rem;
  }

  /* No underline on dropdown trigger */
  .header__dropdown-trigger::after {
    display: none;
  }

  .header__dropdown-chevron {
    width: 10px;
    height: 10px;
    transition: transform 0.25s ease;
    position: relative;
    top: 1px;
  }

  .header__dropdown.open .header__dropdown-chevron {
    transform: rotate(180deg);
  }

  .header__dropdown-panel {
    position: absolute;
    top: calc(100% + 12px);
    left: 50%;
    transform: translateX(-50%) translateY(-4px);
    width: 260px;
    background: var(--paper);
    border: 0.5px solid var(--rule);
    border-radius: var(--radius-sm);
    box-shadow: 0 8px 30px rgba(0,0,0,0.08), 0 2px 8px rgba(0,0,0,0.04);
    padding: var(--space-2) 0;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
    pointer-events: none;
  }

  /* Invisible hover bridge between trigger and panel */
  .header__dropdown-panel::before {
    content: '';
    position: absolute;
    top: -14px;
    left: 0;
    right: 0;
    height: 14px;
  }

  .header__dropdown.open .header__dropdown-panel {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .header__dropdown-link {
    display: flex;
    align-items: baseline;
    gap: var(--space-3);
    padding: 0.5rem var(--space-5);
    font-family: var(--font-serif);
    font-size: var(--fs-sm);
    color: var(--ink-muted);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .header__dropdown-link:hover {
    background: var(--paper-warm);
    color: var(--accent);
  }

  .header__dropdown-chapter {
    font-family: var(--font-mono);
    font-size: 0.62rem;
    color: var(--ink-faint);
    min-width: 28px;
    letter-spacing: 0.03em;
  }

  .header__dropdown-footer {
    border-top: 0.5px solid var(--rule-light);
    margin-top: var(--space-2);
    padding-top: var(--space-2);
  }

  .header__dropdown-all {
    display: block;
    padding: 0.5rem var(--space-5);
    font-family: var(--font-mono);
    font-size: var(--fs-xs);
    color: var(--accent);
    text-decoration: none;
    letter-spacing: 0.03em;
    transition: color var(--transition-fast);
  }

  .header__dropdown-all:hover { color: var(--accent-hover); }

  /* ═════ CTA BUTTON ═════ */
  .header__cta {
    display: none;
    font-family: var(--font-serif);
    font-size: var(--fs-sm);
    color: var(--paper);
    background: var(--ink);
    padding: 0.45rem 1.2rem;
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: all var(--transition-base);
    white-space: nowrap;
  }

  @media (min-width: 900px) {
    .header__cta {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }
  }

  .header__cta:hover {
    background: var(--accent);
    transform: translateY(-1px);
  }

  .header__cta-arrow { transition: transform var(--transition-fast); }
  .header__cta:hover .header__cta-arrow { transform: translateX(3px); }

  /* ═════ BURGER ═════ */
  .header__burger {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    z-index: 110;
  }

  @media (min-width: 900px) { .header__burger { display: none; } }

  .header__burger span {
    width: 22px;
    height: 1.5px;
    background: var(--ink);
    transition: all var(--transition-base);
    transform-origin: center;
  }

  .header__burger.active span:nth-child(1) { transform: translateY(6.5px) rotate(45deg); }
  .header__burger.active span:nth-child(2) { opacity: 0; }
  .header__burger.active span:nth-child(3) { transform: translateY(-6.5px) rotate(-45deg); }

  /* ═════ MOBILE MENU ═════ */
  .header__mobile {
    display: none;
    background: var(--paper);
    border-top: 0.5px solid var(--rule-light);
    padding: var(--space-6) var(--gutter) var(--space-8);
  }

  .header__mobile.open { display: block; }

  @media (min-width: 900px) { .header__mobile { display: none !important; } }

  .header__mobile-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .header__mobile-link {
    font-family: var(--font-serif);
    font-size: var(--fs-lg);
    color: var(--ink-light);
    padding: var(--space-3) 0;
    border-bottom: 0.5px solid var(--rule-light);
    text-decoration: none;
    transition: color var(--transition-fast);
    background: none;
    border-top: none;
    border-left: none;
    border-right: none;
    cursor: pointer;
    text-align: left;
    width: 100%;
  }

  .header__mobile-link:hover { color: var(--accent); }

  .header__mobile-section {
    font-family: var(--font-mono);
    font-size: var(--fs-xs);
    color: var(--ink-faint);
    margin-right: 0.5rem;
  }

  /* Mobile group (expandable Usługi) */
  .header__mobile-group-trigger {
    display: flex;
    align-items: center;
  }

  .header__mobile-chevron {
    margin-left: auto;
    transition: transform 0.25s ease;
    color: var(--ink-faint);
  }

  .header__mobile-group-trigger[aria-expanded="true"] .header__mobile-chevron {
    transform: rotate(180deg);
  }

  .header__mobile-submenu {
    display: none;
    flex-direction: column;
    padding: var(--space-1) 0 var(--space-2) var(--space-6);
    border-bottom: 0.5px solid var(--rule-light);
  }

  .header__mobile-submenu.open { display: flex; }

  .header__mobile-sublink {
    display: flex;
    align-items: baseline;
    gap: var(--space-3);
    padding: var(--space-2) 0;
    font-family: var(--font-serif);
    font-size: var(--fs-base);
    color: var(--ink-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .header__mobile-sublink:hover { color: var(--accent); }

  .header__mobile-subchapter {
    font-family: var(--font-mono);
    font-size: 0.62rem;
    color: var(--ink-faint);
    min-width: 28px;
  }

  .header__mobile-cta {
    display: inline-block;
    margin-top: var(--space-4);
    padding: var(--space-3) var(--space-6);
    background: var(--ink);
    color: var(--paper);
    font-family: var(--font-serif);
    font-size: var(--fs-base);
    text-align: center;
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: background var(--transition-base);
  }

  .header__mobile-cta:hover { background: var(--accent); }
</style>

<script>
  function initHeader() {
    const header = document.getElementById('header');
    const burger = document.getElementById('burger');
    const mobileMenu = document.getElementById('mobile-menu');
    const dropdown = document.getElementById('services-dropdown');
    const trigger = dropdown?.querySelector('.header__dropdown-trigger');
    const mobileServicesTrigger = document.getElementById('mobile-services-trigger');
    const mobileServicesSubmenu = document.getElementById('mobile-services-submenu');

    // Scroll effect
    function onScroll() {
      if (window.scrollY > 60) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();

    // ═════ Desktop dropdown ═════
    let closeTimeout: ReturnType<typeof setTimeout>;

    function openDropdown() {
      clearTimeout(closeTimeout);
      dropdown?.classList.add('open');
      trigger?.setAttribute('aria-expanded', 'true');
    }

    function closeDropdown() {
      dropdown?.classList.remove('open');
      trigger?.setAttribute('aria-expanded', 'false');
    }

    function scheduleClose() {
      closeTimeout = setTimeout(closeDropdown, 150);
    }

    dropdown?.addEventListener('mouseenter', openDropdown);
    dropdown?.addEventListener('mouseleave', scheduleClose);

    trigger?.addEventListener('click', (e) => {
      e.preventDefault();
      if (dropdown?.classList.contains('open')) {
        closeDropdown();
      } else {
        openDropdown();
      }
    });

    document.addEventListener('click', (e) => {
      if (!dropdown?.contains(e.target as Node)) {
        closeDropdown();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeDropdown();
    });

    // ═════ Burger toggle ═════
    burger?.addEventListener('click', () => {
      const isOpen = burger.classList.toggle('active');
      mobileMenu?.classList.toggle('open', isOpen);
      burger.setAttribute('aria-expanded', String(isOpen));
      mobileMenu?.setAttribute('aria-hidden', String(!isOpen));
    });

    // ═════ Mobile services toggle ═════
    mobileServicesTrigger?.addEventListener('click', () => {
      const isOpen = mobileServicesTrigger.getAttribute('aria-expanded') === 'true';
      mobileServicesTrigger.setAttribute('aria-expanded', String(!isOpen));
      mobileServicesSubmenu?.classList.toggle('open', !isOpen);
      mobileServicesSubmenu?.setAttribute('aria-hidden', String(isOpen));
    });

    // Close mobile menu on link click
    mobileMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        burger?.classList.remove('active');
        mobileMenu?.classList.remove('open');
        burger?.setAttribute('aria-expanded', 'false');
        mobileMenu?.setAttribute('aria-hidden', 'true');
      });
    });
  }

  initHeader();
  document.addEventListener('astro:after-swap', initHeader);
</script>
---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeading from '../../../components/SectionHeading.astro';

const serviceSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://www.sklad-tekstu.pl/uslugi/cwiczenia-arkusze/#service",
      "name": "Skład ćwiczeń i arkuszy egzaminacyjnych w LaTeX",
      "description": "Profesjonalny skład zestawów zadań, arkuszy egzaminacyjnych, kart pracy i zeszytów ćwiczeń w systemie LaTeX. Automatyczna numeracja, warianty zadań, klucze odpowiedzi.",
      "provider": { "@id": "https://www.sklad-tekstu.pl/#organization" },
      "serviceType": "Skład ćwiczeń i arkuszy LaTeX",
      "areaServed": ["PL", "EU"],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Typy materiałów ćwiczeniowych",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład zestawów zadań" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład arkuszy egzaminacyjnych" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład kart pracy" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład zeszytów ćwiczeń" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład testów z wariantami" } }
        ]
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Strona główna", "item": "https://www.sklad-tekstu.pl/" },
        { "@type": "ListItem", "position": 2, "name": "Usługi", "item": "https://www.sklad-tekstu.pl/uslugi/" },
        { "@type": "ListItem", "position": 3, "name": "Ćwiczenia i arkusze", "item": "https://www.sklad-tekstu.pl/uslugi/cwiczenia-arkusze/" }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Czy można automatycznie generować warianty arkuszy egzaminacyjnych?",
          "acceptedAnswer": { "@type": "Answer", "text": "Tak. LaTeX pozwala na tworzenie wielu wariantów tego samego egzaminu z automatyczną zmianą kolejności zadań, danych liczbowych lub odpowiedzi. Każdy wariant ma spójną numerację i własny klucz odpowiedzi." }
        },
        {
          "@type": "Question",
          "name": "Ile kosztuje skład zestawu ćwiczeń?",
          "acceptedAnswer": { "@type": "Answer", "text": "Koszt zależy od liczby zadań, złożoności wzorów i wymaganych elementów (rysunki, tabele, klucze). Wycena jest bezpłatna — wyślij materiały, a w ciągu 24 godz. otrzymasz szczegółową kalkulację." }
        },
        {
          "@type": "Question",
          "name": "Czy mogę samodzielnie dodawać nowe zadania w kolejnych semestrach?",
          "acceptedAnswer": { "@type": "Answer", "text": "Tak. Dostarczamy pliki źródłowe .tex z modularną strukturą — każde zadanie to osobny blok, który łatwo skopiować, zmodyfikować lub przenieść. Numeracja i klucz odpowiedzi aktualizują się automatycznie." }
        },
        {
          "@type": "Question",
          "name": "Czy zrobicie miejsce na rozwiązania studentów (linie, kratki)?",
          "acceptedAnswer": { "@type": "Answer", "text": "Tak. Projektujemy karty pracy z precyzyjnie odmierzonymi polami na rozwiązania: linie do pisania, kratka do obliczeń, puste pola na rysunki, siatka współrzędnych do wykresów — wszystko w dokładnie określonych wymiarach." }
        }
      ]
    }
  ]
};

// Types
const materialTypes = [
  {
    title: 'Zestawy zadań',
    desc: 'Zadania pogrupowane tematycznie z podziałem na poziomy trudności. Automatyczna numeracja, cross-referencje między zadaniami, wskazówki (hints) i pełne rozwiązania w osobnej sekcji lub na końcu dokumentu.',
    tags: ['enumerate', 'tasks', 'hints', 'solutions'],
    useCase: 'Ćwiczenia audytoryjne, praca domowa, materiały do samodzielnej nauki'
  },
  {
    title: 'Arkusze egzaminacyjne',
    desc: 'Profesjonalne arkusze z nagłówkiem (uczelnia, przedmiot, data, czas, punktacja), instrukcjami, zadaniami zamkniętymi i otwartymi, tabelą punktacji i miejscem na odpowiedzi. Warianty A/B/C z automatyczną zmianą kolejności.',
    tags: ['exam', 'warianty', 'punktacja', 'timer'],
    useCase: 'Egzaminy sesyjne, kolokwia, sprawdziany, egzaminy poprawkowe'
  },
  {
    title: 'Karty pracy',
    desc: 'Materiały do pracy na zajęciach z polami na rozwiązania: linie do pisania, kratki do obliczeń, puste układy współrzędnych do rysowania wykresów, tabele do uzupełnienia. Precyzyjne wymiary dostosowane do formatu A4.',
    tags: ['worksheet', 'pola', 'kratka', 'wykresy'],
    useCase: 'Zajęcia laboratoryjne, warsztaty, ćwiczenia w klasie'
  },
  {
    title: 'Zeszyty ćwiczeń',
    desc: 'Kompletne publikacje na cały semestr lub rok akademicki. Podział na rozdziały odpowiadające tematom wykładów, wprowadzenia teoretyczne, przykłady z rozwiązaniami, zadania do samodzielnego rozwiązania, klucz odpowiedzi.',
    tags: ['book', 'memoir', 'semestralny', 'TOC'],
    useCase: 'Materiał towarzyszący wykładowi, kurs całosemestralny'
  },
  {
    title: 'Testy wielokrotnego wyboru',
    desc: 'Testy z pytaniami zamkniętymi: jednokrotny i wielokrotny wybór, prawda/fałsz, uzupełnianie luk, dopasowywanie. Automatyczna randomizacja kolejności pytań i odpowiedzi między wariantami. Klucz odpowiedzi z podziałem na warianty.',
    tags: ['mcq', 'randomizacja', 'klucz', 'warianty'],
    useCase: 'Testy wejściowe, egzaminy testowe, quizy, zaliczenia'
  },
  {
    title: 'Tablice wzorów i karty pomocy',
    desc: 'Kompaktowe zestawienia wzorów, twierdzeń, definicji i zależności na jednej lub dwóch stronach A4. Idealne jako dozwolona pomoc na egzaminie lub ściągawka do nauki. Maksymalna gęstość informacji przy zachowaniu czytelności.',
    tags: ['cheatsheet', 'kompaktowy', 'dwukolumnowy'],
    useCase: 'Pomoc egzaminacyjna, powtórka przed sesją, karta referencyjna'
  }
];

// LaTeX advantages for exercises specifically
const advantages = [
  {
    label: 'Warianty',
    title: 'Automatyczne generowanie wariantów',
    desc: 'Jeden plik źródłowy — wiele wariantów egzaminu. LaTeX pozwala na automatyczną zmianę kolejności zadań, permutację odpowiedzi w pytaniach zamkniętych, podmianę danych liczbowych i generowanie osobnych kluczy odpowiedzi dla każdego wariantu. Koniec z ręcznym kopiowaniem i przeklejaniem.'
  },
  {
    label: 'Numeracja',
    title: 'Inteligentna numeracja zadań',
    desc: 'Dodajesz zadanie w środku zestawu? Usuwasz dwa z końca? Zmieniasz kolejność rozdziałów? Cała numeracja — zadań, podpunktów, stron, referencji — przenumerowuje się automatycznie. Klucz odpowiedzi aktualizuje się razem z zadaniami. Zero ręcznej pracy, zero błędów.'
  },
  {
    label: 'Wzory',
    title: 'Wzory matematyczne bez kompromisów',
    desc: 'Arkusze z fizyki, matematyki, chemii czy statystyki wymagają setek wzorów — i każdy musi być perfekcyjny. LaTeX renderuje wzory dowolnej złożoności: od prostych równań po macierze, całki wielokrotne, układy równań i diagramy Feynmana. Idealna typografia w każdym zadaniu.'
  },
  {
    label: 'Modularność',
    title: 'Baza zadań do wielokrotnego użytku',
    desc: 'Każde zadanie to niezależny blok kodu, który możesz przenosić między zestawami. Budujesz bibliotekę zadań, z której składasz nowe arkusze jak z klocków — wystarczy \\input{zadanie-37.tex}. Idealne rozwiązanie na kolejne semestry i roczniki.'
  },
  {
    label: 'Layout',
    title: 'Precyzyjne pola na rozwiązania',
    desc: 'Linie do pisania, kratka do obliczeń, puste wykresy, tabele do uzupełnienia — każdy element ma dokładnie określone wymiary i jest perfekcyjnie wyrównany. Na kartach pracy i arkuszach egzaminacyjnych precyzja layoutu jest krytyczna — LaTeX ją gwarantuje.'
  },
  {
    label: 'Spójność',
    title: 'Jednolity styl w całym zestawie',
    desc: 'Definiujesz styl raz — nagłówek, czcionki, marginesy, formatowanie zadań, styl wskazówek, oznaczenie poziomu trudności — i stosujesz go konsekwentnie w każdym zestawie. Studenci dostają materiały, które zawsze wyglądają tak samo, co ułatwia nawigację i naukę.'
  }
];

// Sample exam structure
const examParts = [
  { label: 'Nagłówek', desc: 'Uczelnia, wydział, przedmiot, data, czas, wariant, punktacja' },
  { label: 'Instrukcja', desc: 'Zasady egzaminu, dozwolone pomoce, sposób oceniania' },
  { label: 'Część A', desc: 'Zadania zamknięte — test wielokrotnego wyboru z kartą odpowiedzi' },
  { label: 'Część B', desc: 'Zadania otwarte z miejscem na rozwiązania i obliczenia' },
  { label: 'Część C', desc: 'Zadania problemowe / dowodowe z polem na wyprowadzenie' },
  { label: 'Tabela punktacji', desc: 'Zestawienie maksymalnych punktów za każde zadanie' },
  { label: 'Klucz odpowiedzi', desc: 'Osobna strona z odpowiedziami (drukowana oddzielnie)' }
];

// Process
const processSteps = [
  { num: '01', title: 'Materiały źródłowe', desc: 'Wyślij treść zadań w dowolnym formacie — Word, PDF, plik tekstowy, zdjęcia notatek, a nawet opis słowny (np. „10 zadań z rachunku macierzy, poziom: analiza II, z kluczem"). Im więcej kontekstu, tym lepiej.', time: '5 min' },
  { num: '02', title: 'Wycena i ustalenia', desc: 'Wyceniamy projekt w ciągu 24 godzin. Ustalamy szczegóły: format strony, styl nagłówka, numeracja zadań, czy potrzebne warianty, klucz odpowiedzi, pola na rozwiązania. Wycena jest bezpłatna.', time: '24 godz.' },
  { num: '03', title: 'Makieta', desc: 'Składamy próbną stronę z kilkoma zadaniami do akceptacji. Sprawdzasz nagłówek, styl zadań, rozmieszczenie wzorów, wielkość pól na odpowiedzi. Po akceptacji — skład reszty.', time: '1–2 dni' },
  { num: '04', title: 'Skład i warianty', desc: 'Składamy kompletny zestaw. Jeśli potrzebujesz wariantów — generujemy je automatycznie z osobnymi kluczami. Każdy wariant przechodzi weryfikację spójności numeracji.', time: '2–7 dni' },
  { num: '05', title: 'Korekta i finalizacja', desc: 'Sprawdzasz gotowy PDF, zgłaszasz uwagi, my je wdrażamy. Na końcu dostajesz: PDF do druku, PDF z kluczem, opcjonalnie pliki .tex do samodzielnej edycji w przyszłości.', time: '1–2 dni' }
];

// FAQ
const faqItems = [
  { q: 'Czy mogę dostać kilka wariantów tego samego egzaminu?', a: 'Tak. Generujemy dowolną liczbę wariantów z automatyczną zmianą kolejności zadań, permutacją odpowiedzi w pytaniach zamkniętych i/lub podmianą danych liczbowych. Każdy wariant ma osobny klucz odpowiedzi i jest oznaczony (Wariant A, B, C...). Warianty powstają z jednego pliku źródłowego, co eliminuje ryzyko niespójności.' },
  { q: 'Ile kosztuje skład arkusza egzaminacyjnego?', a: 'Koszt zależy od liczby zadań i ich złożoności (liczba wzorów, rysunków, tabel). Prosty test z 20 pytaniami zamkniętymi — od 200 zł. Arkusz z 10 zadaniami otwartymi z matematyką i fizyką — od 400 zł. Dokładna wycena po zobaczeniu materiałów. Wycena jest bezpłatna.' },
  { q: 'Czy mogę samodzielnie modyfikować zadania na kolejne semestry?', a: 'Tak. Dostarczamy pliki .tex z modularną strukturą — każde zadanie to niezależny blok, łatwy do edycji, kopiowania i przenoszenia. Dodajemy komentarze w kodzie i instrukcję, jak dodać nowe zadanie, zmienić dane lub wygenerować nowy wariant. Podstawowa znajomość LaTeX wystarczy.' },
  { q: 'Czy zrobicie pola na rozwiązania (linie, kratka)?', a: 'Tak. Projektujemy: linie do pisania (z regulowanym odstępem), siatkę do obliczeń (kratka 5mm lub 7mm), puste układy współrzędnych do wykresów (z osiami, podziałką i etykietami), tabele z pustymi komórkami do uzupełnienia, pola na rysunki o określonych wymiarach. Wszystko precyzyjnie odmierzone.' },
  { q: 'Jak szybko złożycie arkusz na kolokwium za tydzień?', a: 'Krótki arkusz (1–2 strony, kilkanaście zadań) składamy w 1–2 dni robocze. Przy pilnych terminach oferujemy tryb ekspresowy — nawet w ciągu 24 godzin. Skontaktuj się z wyprzedzeniem, żebyśmy mogli zarezerwować termin.' },
  { q: 'Czy składacie materiały do szkół średnich (matura, sprawdziany)?', a: 'Tak. Składamy arkusze maturalne, sprawdziany, karty pracy i testy dla szkół średnich. Znamy format arkuszy CKE i możemy przygotować materiały w analogicznym stylu — z tabelą punktacji, kartą odpowiedzi i instrukcją dla ucznia.' },
  { q: 'Czy zrobicie zadania z rysunkami technicznymi i wykresami?', a: 'Tak. Rysunki wektorowe TikZ (układy współrzędnych, wykresy funkcji, schematy obwodów, figury geometryczne, diagramy) oraz wykresy PGFPlots (histogramy, wykresy punktowe, box ploty). Rysunki są wektorowe — wyglądają idealnie w każdej skali i rozdzielczości.' },
  { q: 'W jakim formacie dostarczycie gotowe materiały?', a: 'PDF gotowy do druku (A4 lub inny format, z marginesami na bindowanie). Na życzenie: osobny PDF z kluczem odpowiedzi, osobny PDF z rozwiązaniami, pliki źródłowe .tex do samodzielnej edycji. Przy materiałach do dystrybucji online — PDF z hiperłączami i zakładkami.' }
];
---

<BaseLayout
  title="Skład ćwiczeń i arkuszy egzaminacyjnych w LaTeX"
  description="Profesjonalny skład zestawów zadań, arkuszy egzaminacyjnych, kart pracy i zeszytów ćwiczeń w LaTeX. Automatyczna numeracja, warianty zadań, klucze odpowiedzi, pola na rozwiązania. Matematyka, fizyka, chemia, informatyka."
  keywords="skład ćwiczeń latex, arkusze egzaminacyjne latex, zestawy zadań latex, karty pracy latex, zeszyt ćwiczeń latex, skład zadań matematyka, arkusz egzaminacyjny skład, warianty egzaminu latex, klucz odpowiedzi latex"
  schema={serviceSchema}
>

  <!-- HERO -->
  <section class="hero" aria-labelledby="hero-title">
    <div class="hero__breadcrumb container">
      <nav aria-label="Ścieżka nawigacji">
        <a href="/">Strona główna</a> <span aria-hidden="true">›</span>
        <a href="/#uslugi">Usługi</a> <span aria-hidden="true">›</span>
        <span>Ćwiczenia i&nbsp;arkusze</span>
      </nav>
    </div>
    <div class="container hero__inner">
      <div class="hero__chapter" aria-hidden="true">§1.3</div>
      <div class="hero__rule-top" aria-hidden="true"></div>
      <h1 id="hero-title" class="hero__title">
        Skład <span class="hero__highlight">ćwiczeń i&nbsp;arkuszy</span><br>egzaminacyjnych
      </h1>
      <p class="hero__subtitle">
        Zestawy zadań, arkusze egzaminacyjne, karty pracy, testy —<br>
        z&nbsp;automatyczną numeracją, wariantami i&nbsp;kluczami odpowiedzi
      </p>
      <div class="hero__rule-bottom" aria-hidden="true"></div>
      <div class="hero__tags">
        <span class="hero__tag">exam</span>
        <span class="hero__tag">tasks</span>
        <span class="hero__tag">enumerate</span>
        <span class="hero__tag">tikz</span>
        <span class="hero__tag">warianty</span>
        <span class="hero__tag">klucz</span>
      </div>
      <div class="hero__actions">
        <a href="#wycena" class="hero__cta-primary">Wyślij zadania do wyceny <span>→</span></a>
        <a href="#typy" class="hero__cta-secondary">Dowiedz się więcej</a>
      </div>
    </div>
  </section>

  <!-- INTRO -->
  <section class="intro" aria-labelledby="intro-title">
    <div class="container">
      <div class="intro__grid reveal">
        <div class="intro__text">
          <h2 id="intro-title">Arkusz egzaminacyjny to nie miejsce na kompromisy typograficzne</h2>
          <p>
            Student ma 90 minut na egzaminie. Każda sekunda spędzona na odcyfrowywaniu rozjechanego
            wzoru, szukaniu numeru zadania albo zastanawianiu się, czy to „x" czy „×" — to&nbsp;sekunda
            stracona na myśleniu. Profesjonalny skład arkusza to nie fanaberia — to szacunek dla
            czasu i&nbsp;wysiłku zdających.
          </p>
          <p>
            LaTeX zapewnia, że każde zadanie wygląda identycznie — konsystentna numeracja, czytelne
            wzory, precyzyjne pola na odpowiedzi. Warianty A/B/C generują się automatycznie z&nbsp;jednego
            pliku, więc masz pewność, że każdy ma te same zadania, tylko w&nbsp;innej kolejności. Klucz
            odpowiedzi aktualizuje się sam — zero błędów, zero ręcznej roboty.
          </p>
          <p>
            Składamy materiały dla wykładowców akademickich, nauczycieli szkół średnich, autorów
            podręczników i&nbsp;firm szkoleniowych. Od prostego kolokwium z&nbsp;10 zadaniami po
            semestralny zeszyt ćwiczeń z&nbsp;setkami zadań, rysunkami TikZ i&nbsp;pełnymi rozwiązaniami.
          </p>
        </div>
        <aside class="intro__sidebar">
          <div class="intro__sidebar-block">
            <span class="intro__sidebar-value">∞</span>
            <span class="intro__sidebar-label">wariantów z jednego pliku</span>
          </div>
          <div class="intro__sidebar-block">
            <span class="intro__sidebar-value">0</span>
            <span class="intro__sidebar-label">błędów w numeracji</span>
          </div>
          <div class="intro__sidebar-block">
            <span class="intro__sidebar-value">24 godz.</span>
            <span class="intro__sidebar-label">czas wyceny</span>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- TYPES -->
  <section class="types" id="typy" aria-labelledby="types-title">
    <div class="container">
      <div class="reveal">
        <SectionHeading
          number="§1.3.1"
          title="Rodzaje materiałów ćwiczeniowych"
          subtitle="Każdy typ materiału dydaktycznego wymaga innego podejścia do layoutu, numeracji i struktury. Mamy doświadczenie w składzie każdego z nich."
        />
      </div>
      <div class="types__grid">
        {materialTypes.map((t) => (
          <div class="types__card reveal">
            <h3 class="types__card-title">{t.title}</h3>
            <p class="types__card-desc">{t.desc}</p>
            <div class="types__card-use">
              <span class="types__card-use-label">Zastosowanie:</span> {t.useCase}
            </div>
            <div class="types__card-tags">
              {t.tags.map((tag) => <span class="tag">{tag}</span>)}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SAMPLE EXAM -->
  <section class="sample" aria-label="Przykładowa struktura arkusza egzaminacyjnego">
    <div class="container">
      <div class="reveal">
        <SectionHeading
          number="§1.3.2"
          title="Anatomia arkusza egzaminacyjnego"
          subtitle="Profesjonalny arkusz to przemyślana struktura, w której każdy element ma swoje miejsce. Oto jak wygląda typowy arkusz złożony w LaTeX."
          inverted
        />
      </div>
    </div>

    <div class="sample__layout reveal">
      <div class="sample__page">
        <!-- Exam header -->
        <div class="sample__exam-header">
          <div class="sample__exam-row">
            <span>Politechnika Warszawska</span>
            <span>Wariant A</span>
          </div>
          <div class="sample__exam-row">
            <span>Wydział Elektroniki i Technik Informacyjnych</span>
            <span>Czas: 90 min</span>
          </div>
          <h4 class="sample__exam-title">Egzamin z Analizy Matematycznej II</h4>
          <div class="sample__exam-row sub">
            <span>Semestr letni 2024/2025</span>
            <span>Maks. punktów: 60</span>
          </div>
        </div>

        <div class="sample__exam-instructions">
          Pisać długopisem. Kalkulator dozwolony. Przy zadaniach otwartych wymagane
          jest przedstawienie pełnego rozwiązania.
        </div>

        <!-- Part A -->
        <div class="sample__exam-section">
          <h5>Część A — zadania zamknięte <span class="sample__points">(20 pkt)</span></h5>

          <div class="sample__exam-task">

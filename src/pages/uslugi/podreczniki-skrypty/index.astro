---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SectionHeading from '../../../components/SectionHeading.astro';

// Schema.org
const serviceSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://www.sklad-tekstu.pl/uslugi/podreczniki-skrypty/#service",
      "name": "Skład podręczników i skryptów akademickich w LaTeX",
      "description": "Profesjonalny skład podręczników akademickich, skryptów wykładowych i materiałów dydaktycznych w systemie LaTeX. Wzory matematyczne, tabele, indeksy, spisy treści, bibliografia.",
      "provider": {
        "@type": "ProfessionalService",
        "@id": "https://www.sklad-tekstu.pl/#organization"
      },
      "serviceType": "Skład podręczników LaTeX",
      "areaServed": ["PL", "EU"],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Typy publikacji dydaktycznych",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład podręczników akademickich" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład skryptów wykładowych" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład zeszytów ćwiczeń" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład materiałów dydaktycznych" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład monografii naukowych" } }
        ]
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Strona główna", "item": "https://www.sklad-tekstu.pl/" },
        { "@type": "ListItem", "position": 2, "name": "Usługi", "item": "https://www.sklad-tekstu.pl/uslugi/" },
        { "@type": "ListItem", "position": 3, "name": "Podręczniki i skrypty", "item": "https://www.sklad-tekstu.pl/uslugi/podreczniki-skrypty/" }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Ile kosztuje skład podręcznika w LaTeX?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Koszt składu podręcznika zależy od objętości, złożoności (ilość wzorów, tabel, ilustracji) i wymaganego terminu. Wycena jest bezpłatna — wyślij materiały, a otrzymasz szczegółową kalkulację w ciągu 24 godzin."
          }
        },
        {
          "@type": "Question",
          "name": "W jakim formacie dostarczyć tekst do składu?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Przyjmujemy tekst w dowolnym formacie: Word (.docx), PDF, Markdown, LaTeX (.tex), tekst surowy (.txt), a nawet zdjęcia rękopisów. Najwygodniejszy jest Word lub Markdown z wyraźnie oznaczoną strukturą (nagłówki, wzory, tabele)."
          }
        },
        {
          "@type": "Question",
          "name": "Ile trwa skład podręcznika?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Typowy podręcznik (200-300 stron) składamy w 2-4 tygodnie, w zależności od złożoności. Skrypty wykładowe (50-100 stron) — w 1-2 tygodnie. Podajemy konkretny termin realizacji przy wycenie."
          }
        },
        {
          "@type": "Question",
          "name": "Czy mogę samodzielnie edytować pliki po składzie?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Tak. Na życzenie dostarczamy kompletne pliki źródłowe .tex wraz z instrukcją kompilacji. Możesz samodzielnie aktualizować treść w kolejnych wydaniach."
          }
        },
        {
          "@type": "Question",
          "name": "Czy PDF będzie gotowy do druku offsetowego?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Tak. Generujemy PDF w jakości drukarskiej: profil kolorów CMYK, spady (bleed), znaczniki cięcia (crop marks), fonty wektorowe osadzone w dokumencie. Plik jest gotowy do wysłania do drukarni bez żadnej dodatkowej konwersji."
          }
        }
      ]
    }
  ]
};

// Features data
const features = [
  {
    icon: '∑',
    title: 'Wzory matematyczne',
    desc: 'Składamy wzory dowolnej złożoności — od prostych równań po wieloliniowe wyprowadzenia, macierze, całki wielokrotne i systemy równań z numeracją i cross-referencjami. LaTeX renderuje je z niezrównaną precyzją typograficzną.'
  },
  {
    icon: '▦',
    title: 'Tabele i zestawienia',
    desc: 'Profesjonalne tabele z nagłówkami wielopoziomowymi, łączonymi komórkami, kolorowaniem wierszy i automatycznym łamaniem na kolejne strony. Od prostych zestawień po rozbudowane tabele danych eksperymentalnych.'
  },
  {
    icon: '⊞',
    title: 'Indeksy i spisy',
    desc: 'Automatycznie generowane spisy treści, rysunków, tabel, oznaczeń i skrótów. Indeksy rzeczowe i osobowe z odsyłaczami do stron. Każdy element aktualizuje się automatycznie przy zmianach w tekście.'
  },
  {
    icon: '⟐',
    title: 'Ilustracje i wykresy',
    desc: 'Wektorowe diagramy TikZ, wykresy PGFPlots, schematy blokowe, drzewa decyzyjne, układy współrzędnych. Ilustracje rastrowe w pełnej rozdzielczości z profesjonalnymi podpisami i numeracją.'
  },
  {
    icon: '§',
    title: 'Struktura rozdziałów',
    desc: 'Hierarchiczna numeracja: części, rozdziały, podrozdziały, akapity. Twierdzenia, definicje, dowody, przykłady, uwagi — w wydzielonych, numerowanych środowiskach z ramkami i kolorowym tłem.'
  },
  {
    icon: '⁂',
    title: 'Bibliografia i cytowania',
    desc: 'System BibTeX/BibLaTeX z automatycznym formatowaniem bibliografii w dowolnym standardzie (APA, IEEE, Chicago, Vancouver). Cytowania w tekście aktualizują się automatycznie przy dodawaniu nowych źródeł.'
  }
];

// Types of textbooks
const textbookTypes = [
  {
    title: 'Podręczniki akademickie',
    desc: 'Kompleksowe podręczniki do nauki na poziomie uniwersyteckim. Struktura rozdziałów, twierdzenia z dowodami, przykłady, zadania do samodzielnego rozwiązania, indeks pojęć. Zgodność z wymogami wydawnictw akademickich.',
    examples: 'Analiza matematyczna, fizyka, chemia, mechanika, elektronika, statystyka, ekonometria'
  },
  {
    title: 'Skrypty wykładowe',
    desc: 'Materiały towarzyszące wykładom — bardziej zwięzłe niż pełne podręczniki, ale z pełną formalnością matematyczną. Notatki z wykładów, konspekty, materiały uzupełniające do zajęć.',
    examples: 'Notatki z wykładów, konspekty, materiały do ćwiczeń, suplementy'
  },
  {
    title: 'Zeszyty ćwiczeń',
    desc: 'Zestawy zadań z podziałem na tematy i poziomy trudności. Automatyczna numeracja zadań, warianty (A/B/C), klucze odpowiedzi, miejsce na rozwiązania. Idealne do ćwiczeń audytoryjnych i laboratoryjnych.',
    examples: 'Ćwiczenia z algebry, zadania z fizyki, arkusze laboratoryjne, zestawy problemów'
  },
  {
    title: 'Monografie naukowe',
    desc: 'Publikacje prezentujące wyniki badań w usystematyzowanej formie. Rozbudowana bibliografia, przypisy, aneksy, aparat naukowy. Zgodność z wymaganiami wydawnictw punktowanych.',
    examples: 'Rozprawy habilitacyjne, monografie tematyczne, publikacje punktowane'
  },
  {
    title: 'Materiały do kursów',
    desc: 'Podręczniki i materiały szkoleniowe do kursów i warsztatów. Czytelna struktura modułowa, checklisty, ćwiczenia praktyczne, case studies. Format dostosowany do specyfiki kursu.',
    examples: 'Kursy programowania, szkolenia techniczne, warsztaty, e-learning'
  },
  {
    title: 'Tablice i karty wzorów',
    desc: 'Kompaktowe zestawienia wzorów, tabel i zależności na jednej lub kilku stronach. Idealne jako pomoc dydaktyczna podczas egzaminów lub pracy zawodowej.',
    examples: 'Tablice matematyczne, karty wzorów fizycznych, zestawienia chemiczne'
  }
];

// Process steps
const processSteps = [
  {
    num: '01',
    title: 'Przesłanie materiałów',
    desc: 'Wyślij tekst w dowolnym formacie (Word, PDF, Markdown, LaTeX, tekst surowy). Opisz wymagania: format docelowy, krój pisma, wymiary strony, wymagania uczelni lub wydawnictwa. Im więcej informacji, tym trafniejsza wycena.',
    time: '5 min'
  },
  {
    num: '02',
    title: 'Wycena i harmonogram',
    desc: 'W ciągu 24 godzin otrzymasz szczegółową wycenę z rozbiciem na elementy (tekst podstawowy, wzory, tabele, ilustracje, indeksy) oraz proponowany harmonogram realizacji. Wycena jest bezpłatna i niezobowiązująca.',
    time: '24 godz.'
  },
  {
    num: '03',
    title: 'Makieta i akceptacja',
    desc: 'Projektujemy stronę tytułową, układ strony, style nagłówków, środowiska (twierdzenia, definicje, przykłady) i składamy próbny rozdział. Po Twojej akceptacji makiety przystępujemy do składu całości.',
    time: '2–3 dni'
  },
  {
    num: '04',
    title: 'Skład właściwy',
    desc: 'Składamy kompletny podręcznik: tekst, wzory, tabele, ilustracje, spisy, bibliografia, indeksy. Regularnie przesyłamy PDF-y z postępem prac, żebyś mógł na bieżąco sprawdzać efekty.',
    time: '1–4 tyg.'
  },
  {
    num: '05',
    title: 'Korekta i poprawki',
    desc: 'Przesyłamy gotowy PDF do sprawdzenia. Wprowadzamy wszystkie poprawki — merytoryczne, typograficzne, layoutowe. Robimy tyle rund korekt, ile potrzeba, aż podręcznik będzie idealny.',
    time: 'do uzgodnienia'
  },
  {
    num: '06',
    title: 'Finalizacja',
    desc: 'Generujemy finalny PDF: drukarski (CMYK, spady, crop marks) i/lub ekranowy (RGB, hiperłącza, zakładki). Na życzenie przekazujemy pliki źródłowe .tex z instrukcją kompilacji do samodzielnej edycji.',
    time: '1 dzień'
  }
];

// FAQ
const faqItems = [
  {
    q: 'Ile kosztuje skład podręcznika w LaTeX?',
    a: 'Koszt zależy od trzech czynników: objętości dokumentu (liczba stron), złożoności (gęstość wzorów, tabel, ilustracji) i wymaganego terminu. Typowy skład strony tekstu z umiarkowaną liczbą wzorów to 15–40 zł netto. Strony z gęstą matematyką lub skomplikowanymi tabelami — odpowiednio więcej. Wycena jest zawsze bezpłatna — wyślij materiały, a w ciągu 24 godzin otrzymasz szczegółową kalkulację.'
  },
  {
    q: 'W jakim formacie dostarczyć tekst?',
    a: 'Przyjmujemy tekst w dowolnym formacie: Word (.docx), PDF, Markdown, LaTeX (.tex), tekst surowy (.txt), a nawet zdjęcia rękopisów. Najwygodniejszy jest Word lub Markdown z wyraźnie oznaczoną strukturą (nagłówki na odpowiednich poziomach, wzory w Equation Editor lub zapisane tekstem, tabele w komórkach). Jeśli masz już częściowo przygotowane pliki .tex, możemy na nich bazować.'
  },
  {
    q: 'Ile trwa skład podręcznika?',
    a: 'Typowy podręcznik akademicki (200–300 stron) składamy w 2–4 tygodnie, w zależności od złożoności. Krótsze skrypty wykładowe (50–100 stron) — w 1–2 tygodnie. Zeszyty ćwiczeń i karty wzorów — zwykle w kilka dni. Przy wycenie zawsze podajemy konkretny termin realizacji. W uzasadnionych przypadkach oferujemy tryb ekspresowy.'
  },
  {
    q: 'Czy mogę samodzielnie edytować pliki po składzie?',
    a: 'Tak. Na życzenie dostarczamy kompletne pliki źródłowe .tex wraz z dokumentacją klasy dokumentu, instrukcją instalacji potrzebnych pakietów i instrukcją kompilacji. Dzięki temu możesz samodzielnie aktualizować treść w kolejnych wydaniach — poprawiać literówki, dodawać rozdziały, aktualizować dane — bez ponownego zlecania składu.'
  },
  {
    q: 'Czy PDF będzie gotowy do druku offsetowego?',
    a: 'Tak. Generujemy PDF/X zgodny z wymaganiami drukarni: profil kolorów CMYK, spady (bleed 3–5 mm), znaczniki cięcia (crop marks), fonty wektorowe osadzone w dokumencie, rozdzielczość obrazów min. 300 DPI. Plik jest gotowy do wysłania do drukarni bez żadnej dodatkowej konwersji. Na życzenie przygotowujemy też wersję ekranową z hiperłączami i zakładkami.'
  },
  {
    q: 'Czy składacie podręczniki w języku angielskim?',
    a: 'Tak. Składamy publikacje w języku polskim, angielskim, niemieckim i innych językach europejskich. LaTeX obsługuje zaawansowane reguły dzielenia wyrazów dla każdego języka. W przypadku podręczników wielojęzycznych stosujemy pakiet babel z odpowiednimi konfiguracjami dla każdego języka w dokumencie.'
  },
  {
    q: 'Jakie formaty stron obsługujecie?',
    a: 'Dowolne. Najczęściej składamy podręczniki w formatach B5 (176 × 250 mm — standard wydawnictw akademickich), A4 (210 × 297 mm — skrypty i materiały dydaktyczne) i A5 (148 × 210 mm — kompaktowe poradniki). Możemy też przygotować niestandardowe formaty wymagane przez konkretne wydawnictwo.'
  },
  {
    q: 'Czy zapewniacie korektę tekstu?',
    a: 'Naszą główną usługą jest skład typograficzny, nie korekta językowa. Zakładamy, że tekst jest merytorycznie i językowo gotowy. Natomiast w trakcie składu wyłapujemy oczywiste literówki i niespójności typograficzne (np. różne zapisy tego samego symbolu) i sygnalizujemy je autorowi. Na życzenie możemy polecić profesjonalnego korektora.'
  }
];

// Before/after comparison points
const comparisonPoints = [
  { word: 'Ręczna numeracja rozdziałów i wzorów — rozjeżdża się przy każdej zmianie', latex: 'Automatyczna numeracja wszystkiego — dodajesz rozdział, reszta przenumerowuje się sama' },
  { word: 'Wzory w Equation Editor — ograniczone możliwości, niespójna typografia', latex: 'Pełna moc LaTeX — dowolna złożoność wzorów, idealna typografia matematyczna' },
  { word: 'Bibliografia wklejana ręcznie — każda zmiana to ryzyko błędu', latex: 'BibTeX generuje bibliografię automatycznie w wybranym standardzie (APA, IEEE, Chicago)' },
  { word: 'Spis treści aktualizowany ręcznie — numery stron się nie zgadzają', latex: 'Spis treści, rysunków i tabel generowany jednym poleceniem — zawsze aktualny' },
  { word: 'Tabele rozjeżdżają się między stronami', latex: 'Inteligentne łamanie tabel z powtarzaniem nagłówków na kolejnych stronach' },
  { word: '"U mnie wyglądało inaczej" — PDF zależy od drukarki, systemu, wersji Worda', latex: 'Identyczny PDF na każdym komputerze, w każdym systemie — zawsze' },
];
---

<BaseLayout
  title="Skład podręczników i skryptów akademickich w LaTeX"
  description="Profesjonalny skład podręczników akademickich, skryptów wykładowych i materiałów dydaktycznych w systemie LaTeX. Wzory matematyczne, tabele, indeksy, spisy treści, bibliografia. Print-ready PDF."
  keywords="skład podręczników latex, skład skryptów akademickich, skład materiałów dydaktycznych, skład podręcznika, podręcznik akademicki latex, skrypt wykładowy latex, zeszyt ćwiczeń latex, skład publikacji naukowych"
  schema={serviceSchema}
>

  <!-- ════════════════════════════════════════════════
       HERO
       ════════════════════════════════════════════════ -->
  <section class="hero" aria-labelledby="hero-title">
    <div class="hero__breadcrumb container">
      <nav aria-label="Ścieżka nawigacji">
        <a href="/">Strona główna</a>
        <span aria-hidden="true">›</span>
        <a href="/#uslugi">Usługi</a>
        <span aria-hidden="true">›</span>
        <span>Podręczniki i&nbsp;skrypty</span>
      </nav>
    </div>

    <div class="container hero__inner">
      <div class="hero__chapter" aria-hidden="true">§1.1</div>
      <div class="hero__rule-top" aria-hidden="true"></div>

      <h1 id="hero-title" class="hero__title">
        Skład <span class="hero__highlight">podręczników</span><br>
        i&nbsp;skryptów akademickich
      </h1>

      <p class="hero__subtitle">
        Profesjonalny skład podręczników, skryptów wykładowych, zeszytów ćwiczeń<br>
        i&nbsp;materiałów dydaktycznych w&nbsp;systemie LaTeX
      </p>

      <div class="hero__rule-bottom" aria-hidden="true"></div>

      <div class="hero__tags">
        <span class="hero__tag">book</span>
        <span class="hero__tag">memoir</span>
        <span class="hero__tag">amsmath</span>
        <span class="hero__tag">makeidx</span>
        <span class="hero__tag">hyperref</span>
        <span class="hero__tag">biblatex</span>
      </div>

      <div class="hero__actions">
        <a href="#wycena" class="hero__cta-primary">
          Wyślij tekst do wyceny
          <span>→</span>
        </a>
        <a href="#co-skladamy" class="hero__cta-secondary">
          Dowiedz się więcej
        </a>
      </div>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════
       INTRO — what we do
       ════════════════════════════════════════════════ -->
  <section class="intro" aria-labelledby="intro-title">
    <div class="container">
      <div class="intro__grid reveal">
        <div class="intro__text">
          <h2 id="intro-title">Podręcznik złożony w&nbsp;LaTeX to&nbsp;inna liga</h2>
          <p>
            Podręcznik akademicki to nie ulotka — to&nbsp;dokument, z&nbsp;którym studenci będą pracować 
            przez miesiące lub lata. Dlatego każdy detal ma znaczenie: czytelność wzorów, konsystencja 
            numeracji, jakość tabel, logika indeksu rzeczowego, estetyka strony.
          </p>
          <p>
            System LaTeX został stworzony właśnie do tego. Profesor Donald Knuth zaprojektował go 
            w&nbsp;Stanford, bo nie był zadowolony z&nbsp;jakości składu swoich podręczników informatyki. 
            Dziś LaTeX jest standardem w&nbsp;wydawnictwach naukowych na całym świecie — od Cambridge 
            University Press po Springer i&nbsp;Elsevier.
          </p>
          <p>
            Składamy podręczniki dla wykładowców, instytutów badawczych, wydawnictw akademickich 
            i&nbsp;firm szkoleniowych. Niezależnie od dziedziny — matematyka, fizyka, informatyka, 
            ekonomia, medycyna, inżynieria — dostarczamy PDF w&nbsp;jakości drukarskiej, gotowy 
            do&nbsp;wysłania do&nbsp;drukarni lub publikacji online.
          </p>
        </div>
        <aside class="intro__stats">
          <div class="intro__stat">
            <span class="intro__stat-value">2500+</span>
            <span class="intro__stat-label">złożonych stron</span>
          </div>
          <div class="intro__stat">
            <span class="intro__stat-value">20+</span>
            <span class="intro__stat-label">wydanych publikacji</span>
          </div>
          <div class="intro__stat">
            <span class="intro__stat-value">24 godz.</span>
            <span class="intro__stat-label">czas wyceny</span>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════
       FEATURES — what LaTeX gives you
       ════════════════════════════════════════════════ -->
  <section class="features" id="co-skladamy" aria-labelledby="features-title">
    <div class="container">
      <div class="reveal">
        <SectionHeading
          number="§1.1.1"
          title="Co składamy w&nbsp;Twoim podręczniku"
          subtitle="Każdy element publikacji dydaktycznej — od wzorów matematycznych po indeks rzeczowy — składamy z pełną typograficzną precyzją. Oto kluczowe komponenty, które znajdziesz w każdym naszym podręczniku."
        />
      </div>
    </div>
    <div class="container-wide">
      <div class="features__grid">
        {features.map((f) => (
          <div class="features__card reveal">
            <span class="features__icon" aria-hidden="true">{f.icon}</span>
            <h3 class="features__title">{f.title}</h3>
            <p class="features__desc">{f.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════
       COMPARISON — Word vs LaTeX
       ════════════════════════════════════════════════ -->
  <section class="comparison" aria-labelledby="comparison-title">
    <div class="container">
      <div class="reveal">
        <SectionHeading
          number="§1.1.2"
          title="Word vs. LaTeX — dlaczego to&nbsp;ma&nbsp;znaczenie"
          subtitle="Przy krótkim tekście różnica jest kosmetyczna. Przy 200-stronicowym podręczniku z setkami wzorów, tabel i ilustracji — różnica jest fundamentalna."
        />

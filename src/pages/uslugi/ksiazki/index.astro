// Process steps
const processSteps = [
  {
    num: '01',
    title: 'Przesłanie materiałów',
    desc: 'Wyślij tekst książki w dowolnym formacie (Word, PDF, Markdown, LaTeX, tekst surowy). Opisz wymagania: format docelowy, orientacyjny nakład, preferencje typograficzne, wymagania wydawnictwa lub drukarni. Jeśli masz materiał ilustracyjny — dołącz go lub prześlij później.',
    time: '5 min'
  },
  {
    num: '02',
    title: 'Wycena i harmonogram',
    desc: 'W ciągu 24 godzin otrzymasz szczegółową wycenę z rozbiciem na elementy (tekst główny, strony tytułowe, ilustracje, indeksy, okładka) oraz proponowany harmonogram realizacji. Wycena jest bezpłatna i niezobowiązująca.',
    time: '24 godz.'
  },
  {
    num: '03',
    title: 'Projekt makiety',
    desc: 'Projektujemy kompletną makietę książki: format strony, marginesy, krój pisma, styl nagłówków rozdziałów, żywą paginę, paginację, styl przypisów i cytatów. Składamy próbny rozdział (10–15 stron) do akceptacji — zanim przystąpimy do składu całości.',
    time: '3–5 dni'
  },
  {
    num: '04',
    title: 'Skład właściwy',
    desc: 'Składamy kompletną książkę: tekst główny, strony tytułowe i redakcyjne, spis treści, ilustracje, przypisy, indeksy, kolofon. Regularnie przesyłamy PDF-y z postępem prac. Pilnujemy konsystencji typograficznej na każdej stronie.',
    time: '2–6 tyg.'
  },
  {
    num: '05',
    title: 'Korekta i poprawki',
    desc: 'Przesyłamy gotowy PDF do sprawdzenia. Wprowadzamy wszystkie poprawki — merytoryczne, typograficzne, layoutowe. Sprawdzamy wdowy i sieroty, kontrolujemy łamanie stron, weryfikujemy spis treści i numery stron. Tyle rund korekt, ile potrzeba.',
    time: 'do uzgodnienia'
  },
  {
    num: '06',
    title: 'Finalizacja i okładka',
    desc: 'Generujemy finalny PDF wnętrza: drukarski (CMYK, spady, crop marks) i/lub ekranowy (RGB, hiperłącza, zakładki). Jeśli zamawiasz okładkę — projektujemy przód, tył i grzbiet z uwzględnieniem parametrów drukarni. Na życzenie przekazujemy pliki źródłowe .tex.',

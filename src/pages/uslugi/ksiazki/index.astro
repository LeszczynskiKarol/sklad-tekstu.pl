      "provider": {
        "@type": "ProfessionalService",
        "@id": "https://www.sklad-tekstu.pl/#organization"
      },
      "serviceType": "Skład książek LaTeX",
      "areaServed": ["PL", "EU"],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Typy publikacji książkowych",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład powieści i prozy literackiej" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład zbiorów opowiadań i esejów" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład tomików poetyckich" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład biografii i reportaży" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład poradników i książek non-fiction" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Skład albumów i książek ilustrowanych" } }
